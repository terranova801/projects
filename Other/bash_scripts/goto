#!/usr/bin/env bash

# Base directory
BASE="/media/shared/git"

# Function to print usage
usage() {
    echo "Usage: goto [projects|vault|ceg]"
    exit 1
}

if [ -z "$1" ]; then
    usage
fi

case "$1" in
    projects)
        cd "$BASE/projects" || { echo "❌ Failed to cd to projects"; exit 1; }
        ;;
    vault)
        cd "$BASE/vault" || { echo "❌ Failed to cd to vault"; exit 1; }
        ;;
    ceg)
        cd "$BASE/ceg2350f25-terranova801" || { echo "❌ Failed to cd to ceg"; exit 1; }
        ;;
    *)
        echo "❌ Invalid option: $1"
        usage
        ;;
exec $SHELL
